<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layoutborder"
    android:id="@+id/linear1"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="제목"
            android:textStyle="bold"
            ></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="날짜 :  "
            ></TextView>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="sample_date"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="단가 :  "
                ></TextView>
            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="sample_pay"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="구인 직종 :  "
                ></TextView>
            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="sample_job"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/where"
                android:gravity="right"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="현장 위치 :  "
                ></TextView>
            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="sample_place"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="인력사무소 :  "
                ></TextView>
            <TextView
                android:id="@+id/office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="sample_office"
                ></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/circle_gray"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="17dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원"
            android:textSize="20dp"
            ></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/current_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:textSize="20dp"
                android:layout_margin="1dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="20dp"
                android:layout_margin="1dp"
                ></TextView>
            <TextView
                android:id="@+id/total_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:textSize="20dp"
                android:layout_margin="1dp"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>